{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="container-fluid section--box">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 xs-12">
                <div class="card text-dark p-5">
                    <h1 class="pt-5 card-title">Liste des évènements</h1>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Ville</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.eventTitle }}</td>
                                <td>{{ event.eventDateStart ? event.eventDateStart|date('d-m-Y') : '' }}</td>
                                <td>{{ event.eventDateEnd ? event.eventDateEnd|date('d-m-Y') : '' }}</td>
                                <td>
                                    {% if not event.adresses.empty %}
                                        {% for Adress in event.adresses %}
                                            {{ Adress.city.CityName }}
                                        {% endfor %}
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('event_show', {'id': event.id}) }}">Détails</a>
                                    <a class="btn btn-warning" href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('event_new') }}">Create new</a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
