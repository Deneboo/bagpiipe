{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'layout/nav_admin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid section--box">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 xs-12">
                <div class="card text-dark p-5">
                    <h1 class="pt-5 card-title">Liste des Villes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom de la ville</th>
                <th>Code postal</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.cityName }}</td>
                <td>{{ city.cityPostcode }}</td>
                <td>{{ city.cityCountry }}</td>
                <td>
                    <a href="{{ path('city_show', {'id': city.id}) }}">show</a>
                    <a href="{{ path('city_edit', {'id': city.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-primary" href="{{ path('city_new') }}">Create new</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
