{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'layout/nav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid section--box">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <div class="mt-5 pt-5">
                    {% include 'layout/subnav_admin.html.twig' %}
                </div>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-9 xs-9">
                <div class="container--section--admin pl-lg-5">
                    <div class="section--admin p-lg-2">
                        <h1 class="pt-5">Détail de l'adresse</h1>
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Titre</th>
                                <td>{{ adress.adressTitle }}</td>
                            </tr>
                            <tr>
                                <th>Numéro de rue :</th>
                                <td>{{ adress.adressStreetNumber }}</td>
                            </tr>
                            <tr>
                                <th>Nom de rue :</th>
                                <td>{{ adress.adressStreetName }}</td>
                            </tr>
                            <tr>
                                <th>Informations complémentaires :</th>
                                <td>{{ adress.adressInformation }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <a  class="btn btn-info" href="{{ path('adress_index') }}">Retour à la liste</a>
                        <a class="btn btn-warning ml-1" href="{{ path('adress_edit', {'id': adress.id}) }}">Modifier l'adresse</a>
                        {{ include('admin/adress/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
