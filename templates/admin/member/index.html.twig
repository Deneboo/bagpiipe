{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1>Member index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Filename</th>
                <th>Member_name</th>
                <th>Member_surname</th>
                <th>Member_birth_date</th>
                <th>Member_membership_date</th>
                <th>Member_information</th>
                <th>Member_phone</th>
                <th>Member_story</th>
                <th>Member_statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td><img src="{{ vich_uploader_asset(member, 'imageFile') }}" style="width: 10vw; height: auto;"></td>
                <td>{{ member.memberName }}</td>
                <td>{{ member.memberSurname }}</td>
                <td>{{ member.memberBirthDate ? member.memberBirthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ member.memberMembershipDate ? member.memberMembershipDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ member.memberInformation }}</td>
                <td>{{ member.memberPhone }}</td>
                <td>{{ member.memberStory }}</td>
                <td>{{ member.memberStatut ? member.memberStatut|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}">show</a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_new') }}">Create new</a>
{% endblock %}
