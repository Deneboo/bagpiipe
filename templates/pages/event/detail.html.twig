{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'layout/nav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid section--box">
        <div class="row">
            <!--
            <div class="col-lg-2 col-md-2">

            </div>
            -->
            <div class="col-lg-12 col-md-12 col-sm-12 xs-12">
                <div class="card p-5">
                    <div class="card-header">
                    <h1 class="pt-5 card-title event-title-show">{{ event.eventTitle }}</h1>

                    <h3 class="event-title">
                        {% for Adress in event.adresses %}
                            {{ Adress.city.CityName }},
                        {% endfor %}
                        le {{ event.eventDateStart ? event.eventDateStart|date('d/m/Y') : '' }}.</h3>
                    </div>
                    <div class="card-body">
                    <div class="card-img">
                        <img class="card-img" src="{{ vich_uploader_asset(event, 'imageFile') }}">
                    </div>
                    <p>
                        {{ event.eventDescription }}
                    </p>
                    <p class="text-justify">
                        {{ event.eventStory }}
                    </p>
                </div>
            </div>
            <!--
            <div class="col-lg-3">

            </div>
            -->
        </div>
    </div>
{% endblock %}